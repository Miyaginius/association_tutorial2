<% if @tweet.errors.any? %>
  <div id="error_explanation">
  	<div class="alert alert-danger">
  	  The form contains <%= pluralize(@tweet.errors.count, "error") %>.
  	</div>
  	<ul>
  	  <% @tweet.errors.full_messages.each do |msg| %>
  	  <li><%= msg %></li>
  	  <% end %>
  	</ul>
  </div>
<% end %>